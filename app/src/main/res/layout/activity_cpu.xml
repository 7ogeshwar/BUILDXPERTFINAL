<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".cpu">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Description at the top -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nico"
                    android:padding="5dp"
                    android:text="What is a CPU in a computer?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:fontFamily="@font/nico"
                    android:text="A central processing unit (CPU) is the primary component of a computer that performs most of the processing inside a computer. The CPU carries out instructions from programs by performing basic arithmetic, logic, control, and input/output operations." />

                <!-- List of CPU Items -->
                <!-- Repeat this block for each CPU item (total 15 items) -->

                <!-- CPU Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intel Core i9-12900K"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs. 55,000"
                                android:fontFamily="@font/nico"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:fontFamily="@font/nico"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/intel"
                        android:contentDescription="CPU Image"
                        android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Repeat similarly for items 2 to 15 -->

                <!-- CPU Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AMD Ryzen 9 5950X"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs. 63,000"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:fontFamily="@font/nico"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/cpu"
                        android:contentDescription="CPU Image"
                        android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CPU Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intel Core i7-12700K"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs. 40,000"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nico"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/intel"
                        android:contentDescription="CPU Image"
                        android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
<!--cpu 4-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intel Core i9-12900K Desktop Processor16(8P+8E) Coresup to 5.2 GHz"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs.35,000"
                                android:fontFamily="@font/nico"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:fontFamily="@font/nico"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/intel"
                            android:contentDescription="CPU Image"
                            android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
<!--               cpu 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="AMD Ryzen 7 5700X3D Desktop Processor 8 cores 16 Threads 100 MB Cache 3.0 GHz Upto 4.1 GHz"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs.22,000"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nico"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:fontFamily="@font/nico"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/cpu"
                            android:contentDescription="CPU Image"
                            android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


