<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="4dp" android:color="#000000" /> <!-- Set the border width and color here -->
            <corners android:radius="16dp" /> <!-- Set the corner radius here -->
        </shape>
    </item>
    <!-- Image layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- Set a color to fill the inner part if needed -->
            <corners android:radius="12dp" /> <!-- Adjust the radius slightly to match the border -->
        </shape>
    </item>
</layer-list>
