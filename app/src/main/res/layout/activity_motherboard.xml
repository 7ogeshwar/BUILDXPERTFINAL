<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".motherboard">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Description at the top -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nico"
                    android:padding="5dp"
                    android:text="What is a Motherboard in a computer?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:fontFamily="@font/nico"
                    android:text="A motherboard is the main printed circuit board (PCB) in a computer. It houses the CPU, memory, and essential components, allowing communication between all parts of the system." />

                <!-- List of Motherboard Items -->
                <!-- Repeat this block for each Motherboard item (total 15 items) -->

                <!-- Motherboard Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ASUS ROG Strix Z690-E"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs. 30,000"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/motherboard"
                            android:contentDescription="Motherboard Image"
                            android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Repeat similarly for items 2 to 15 -->

                <!-- Motherboard Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MSI MPG B550 Gaming Edge WiFi"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs. 16,000"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/motherboard"
                            android:contentDescription="Motherboard Image"
                            android:layout_gravity="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Motherboard Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gigabyte Z590 AORUS Elite"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Starting at Rs. 25,000"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp" />

                            <Button
                                android:id="@+id/button_add_to_cart_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to Cart"
                                android:backgroundTint="@color/black"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/motherboard"
                            android:contentDescription="Motherboard Image"
                            android:layout_gravity="end" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
